<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/block_name_input_add_block_alert_dialog" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Block name"/>
    <Button
            android:text="Save block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_block_button_add_block_alert_dialog"
            app:layout_constraintTop_toBottomOf="@+id/block_name_input_add_block_alert_dialog"
            app:layout_constraintStart_toStartOf="@+id/block_name_input_add_block_alert_dialog"
            app:layout_constraintEnd_toEndOf="@+id/block_name_input_add_block_alert_dialog"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>