<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="Exercise Name"
            android:maxWidth="100dp"
            android:layout_width="100dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_name_textview_workout"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/slash_textview_workout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/slash_textview_workout"
            app:layout_constraintStart_toEndOf="@+id/exercise_name_textview_workout"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/rpe_textview_workout"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="4dp"/>
    <TextView
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rpe_textview_workout"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/slash_textview_workout"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/weight_input_workout"
            android:layout_marginStart="22dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sets_textview_workout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/slash_textview_workout" android:textAlignment="center"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reps_textview_workout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/slash_textview_workout" android:textAlignment="center"/>
    <TextView
            android:text="lbs"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight_input_workout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp" app:layout_constraintStart_toEndOf="@+id/rpe_textview_workout"
            app:layout_constraintHorizontal_bias="0.5" android:textAlignment="center" android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>