<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:text="Daily Macronutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/daily_macronutrients_title_textview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/daily_macronutrients_title_textview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    android:id="@+id/protein_title_textview" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/carbohydrates_title_textview"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="24dp"/>
            <TextView
                    android:text="Carbohydrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carbohydrates_title_textview"
                    app:layout_constraintStart_toEndOf="@+id/protein_title_textview"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/fats_title_textview" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fats_title_textview"
                    app:layout_constraintStart_toEndOf="@+id/carbohydrates_title_textview"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/calories_title_textview" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calories_title_textview"
                    app:layout_constraintStart_toEndOf="@+id/fats_title_textview"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/protein_input_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/protein_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/protein_title_textview"
                    app:layout_constraintEnd_toEndOf="@+id/protein_title_textview" android:textSize="10sp"
                    android:hint="grams" android:textAlignment="center" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/carbohydrates_input_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/carbohydrates_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/carbohydrates_title_textview"
                    app:layout_constraintEnd_toEndOf="@+id/carbohydrates_title_textview" android:hint="grams"
                    android:textAlignment="center" android:textSize="10sp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/fats_input_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/fats_title_textview"
                    app:layout_constraintEnd_toEndOf="@+id/fats_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/fats_title_textview" android:hint="grams"
                    android:textAlignment="center" android:textSize="10sp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/calories_input_edittext"
                    app:layout_constraintEnd_toEndOf="@+id/calories_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/calories_title_textview"
                    app:layout_constraintTop_toBottomOf="@+id/calories_title_textview" android:textAlignment="center"
                    android:textSize="10sp" android:hint="#" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
