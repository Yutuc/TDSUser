<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="Exercise Name"
            android:maxWidth="100dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/exercise_name_textview_warmup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/slash_textview_warmup"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="viewStart" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slash_textview_warmup"
            app:layout_constraintStart_toEndOf="@+id/exercise_name_textview_warmup"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/rpe_textview_warmup"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:layout_marginEnd="60dp"/>
    <TextView
            android:text="20"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/rpe_textview_warmup"
            app:layout_constraintStart_toEndOf="@+id/slash_textview_warmup"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:layout_marginEnd="19dp"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sets_textview_warmup" app:layout_constraintEnd_toStartOf="@+id/slash_textview_warmup"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reps_textview_warmup"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/slash_textview_warmup"
    />
</android.support.constraint.ConstraintLayout>