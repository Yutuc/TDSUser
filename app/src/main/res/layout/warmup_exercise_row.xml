<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reps_textview_warmup"
            app:layout_constraintStart_toEndOf="@+id/x_textview"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sets_textview_warmup"
            app:layout_constraintEnd_toStartOf="@+id/x_textview"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Exercise Name"
            android:maxWidth="100dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_name_textview_warmup"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x_textview"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/exercise_name_textview_warmup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>