<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:app="http://schemas.android.com/apk/res-auto"
											 xmlns:tools="http://schemas.android.com/tools"
											 android:layout_width="match_parent"
											 android:layout_height="wrap_content">

	<TextView
			android:text="Meal #"
			android:layout_width="62dp"
			android:maxWidth="62dp"
			android:layout_height="wrap_content"
			android:id="@+id/meal_number_textview_meal_row" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/protein_textview_meal_row"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp" android:layout_marginStart="10dp"/>
	<TextView
			android:text="Protein"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/protein_textview_meal_row"
			app:layout_constraintStart_toEndOf="@+id/meal_number_textview_meal_row"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/carbohydrates_textview_meal_row"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
			android:layout_marginEnd="20dp"/>
	<TextView
			android:text="Carbs"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/carbohydrates_textview_meal_row"
			app:layout_constraintStart_toEndOf="@+id/protein_textview_meal_row"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/fat_textview_meal_row"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp" android:layout_marginEnd="5dp"/>
	<TextView
			android:text="Fat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/fat_textview_meal_row"
			app:layout_constraintStart_toEndOf="@+id/carbohydrates_textview_meal_row"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/vegetables_textview_meal_row"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"/>
	<TextView
			android:text="Veg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/vegetables_textview_meal_row"
			app:layout_constraintStart_toEndOf="@+id/fat_textview_meal_row"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp" android:layout_marginEnd="7dp"/>
</android.support.constraint.ConstraintLayout>