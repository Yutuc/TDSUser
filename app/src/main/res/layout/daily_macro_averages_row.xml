<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
		android:layout_height="wrap_content">


	<android.support.v7.widget.CardView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:text="Macro Averages"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/daily_macro_averages_title"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="Protein"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/daily_macro_averages_title"
					android:id="@+id/protein_title_textview"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/carbohydrates_title_textview"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="Carbohydrates"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/carbohydrates_title_textview"
					app:layout_constraintTop_toBottomOf="@id/daily_macro_averages_title"
					app:layout_constraintStart_toEndOf="@+id/protein_title_textview"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/fat_title_textview"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="Fat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/fat_title_textview"
					app:layout_constraintTop_toBottomOf="@id/daily_macro_averages_title"
					app:layout_constraintStart_toEndOf="@+id/carbohydrates_title_textview"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/calories_title_textview"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="Calories"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/calories_title_textview"
					app:layout_constraintTop_toBottomOf="@id/daily_macro_averages_title"
					app:layout_constraintStart_toEndOf="@+id/fat_title_textview"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/weight_title_textview"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="grams"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/protein_average_text"
					app:layout_constraintTop_toBottomOf="@+id/protein_title_textview"
					app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
					app:layout_constraintStart_toStartOf="@+id/protein_title_textview"
					app:layout_constraintEnd_toEndOf="@+id/protein_title_textview" android:layout_marginTop="8dp"
					android:textAlignment="center" android:textStyle="bold"/>
			<TextView
					android:text="grams"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/carbohydrates_average_text"
					app:layout_constraintTop_toBottomOf="@+id/carbohydrates_title_textview"
					app:layout_constraintStart_toStartOf="@+id/carbohydrates_title_textview"
					app:layout_constraintEnd_toEndOf="@+id/carbohydrates_title_textview"
					android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
					android:textStyle="bold" android:textAlignment="center" android:layout_marginTop="8dp"/>
			<TextView
					android:text="grams"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/fat_average_text"
					app:layout_constraintTop_toBottomOf="@+id/fat_title_textview"
					app:layout_constraintStart_toStartOf="@+id/fat_title_textview"
					app:layout_constraintEnd_toEndOf="@+id/fat_title_textview" android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
					android:textStyle="bold" android:textAlignment="center"/>
			<TextView
					android:text="#"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/calories_average_text"
					app:layout_constraintTop_toBottomOf="@+id/calories_title_textview"
					app:layout_constraintStart_toStartOf="@+id/calories_title_textview"
					app:layout_constraintEnd_toEndOf="@+id/calories_title_textview" android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
					android:textStyle="bold" android:textAlignment="center"/>
			<TextView
					android:text="Weight"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/weight_title_textview"
					app:layout_constraintTop_toBottomOf="@id/daily_macro_averages_title"
					app:layout_constraintStart_toEndOf="@+id/calories_title_textview"
					app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginTop="8dp"/>
			<TextView
					android:text="lbs"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/weight_average_text" android:layout_marginTop="8dp"
					app:layout_constraintTop_toBottomOf="@+id/weight_title_textview"
					app:layout_constraintStart_toStartOf="@+id/weight_title_textview"
					app:layout_constraintEnd_toEndOf="@+id/weight_title_textview" android:textStyle="bold"
					android:textAlignment="center"/>
		</android.support.constraint.ConstraintLayout>
	</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
