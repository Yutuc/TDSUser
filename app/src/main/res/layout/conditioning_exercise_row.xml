<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<TextView
			android:text="Seconds"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/seconds_textview_conditioning"
			app:layout_constraintStart_toEndOf="@+id/colon_textview"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:text="Minutes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/minutes_textview_conditioning"
			app:layout_constraintEnd_toStartOf="@+id/colon_textview"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:text="Exercise Name"
			android:maxWidth="100dp"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/exercise_name_textview_conditioning"
			android:textAlignment="center"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:text=":"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/colon_textview"
			android:textAlignment="center"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintStart_toEndOf="@+id/exercise_name_textview_conditioning"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
			app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>