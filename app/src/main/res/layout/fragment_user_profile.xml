<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context=".fragments.UserProfileFragment">

	<android.support.design.widget.AppBarLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:id="@+id/app_bar_user_profile"
			android:gravity="center"
			android:elevation="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<TextView
					android:text="Athlete name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/athlete_name_textview_user_profile"
					app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textAlignment="center"/>
			<TextView
					android:text="Start weight"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/start_weight_textview_user_profile"
					app:layout_constraintTop_toBottomOf="@+id/athlete_name_textview_user_profile"
					android:textSize="18sp" android:textAlignment="center" android:layout_marginTop="8dp"
					app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/goal_weight_textview_user_profile"/>
			<TextView
					android:text="Goal weight"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/goal_weight_textview_user_profile"
					app:layout_constraintTop_toBottomOf="@+id/athlete_name_textview_user_profile"
					android:layout_marginTop="8dp" android:textSize="18sp" android:textAlignment="center"
					app:layout_constraintStart_toEndOf="@+id/start_weight_textview_user_profile"
					app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/daily_protein_textview_user_profile"
					app:layout_constraintTop_toBottomOf="@+id/start_weight_textview_user_profile"
					android:layout_marginTop="8dp" android:text="Daily protein" android:textSize="14sp"
					android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/carbs_textview_user_profile"
					android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
			<TextView
					android:text="Carbs"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/carbs_textview_user_profile"
					android:layout_marginTop="8dp"
					app:layout_constraintTop_toBottomOf="@+id/start_weight_textview_user_profile"
					android:textAlignment="center"
					app:layout_constraintStart_toEndOf="@+id/daily_protein_textview_user_profile"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/fat_textview_user_profile"
					android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
			<TextView
					android:text="Fat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/fat_textview_user_profile"
					android:layout_marginTop="8dp"
					app:layout_constraintTop_toBottomOf="@+id/goal_weight_textview_user_profile"
					android:textAlignment="center" app:layout_constraintStart_toEndOf="@+id/carbs_textview_user_profile"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toStartOf="@+id/calories_textview_user_profile"
					android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
			<TextView
					android:text="Calories"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/calories_textview_user_profile"
					app:layout_constraintTop_toBottomOf="@+id/goal_weight_textview_user_profile"
					android:layout_marginTop="8dp" android:textAlignment="center"
					app:layout_constraintStart_toEndOf="@+id/fat_textview_user_profile"
					app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
		</android.support.constraint.ConstraintLayout>
	</android.support.design.widget.AppBarLayout>

	<android.support.design.widget.TabLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:id="@+id/tab_layout_user_profile"
			app:layout_constraintTop_toBottomOf="@id/app_bar_user_profile"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:tabGravity="fill"
			app:tabMode="fixed"
			android:background="@color/colorPrimary"
			app:tabTextColor="@android:color/white"
			app:tabIndicatorColor="@color/colorAccent"
			app:tabBackground="@color/colorPrimary"
			app:tabIconTint="@android:color/white"/>
	<android.support.v4.view.ViewPager
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/view_pager_user_profile"
			app:layout_constraintTop_toBottomOf="@id/tab_layout_user_profile"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
	</android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>