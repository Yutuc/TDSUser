<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".bottom_nav_fragments.CheckInFragment">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/scrollview_checkin">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="How was training this week?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"
                    android:id="@+id/prompt_one_textview" android:textStyle="bold" android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@id/prompt_one_textview"
                    android:ems="10"
                    android:id="@+id/prompt_one_input"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_one_textview"
                    app:layout_constraintStart_toStartOf="@+id/prompt_one_textview"
                    android:hint="Rate from 1-10" android:textAlignment="center"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="How was your nutrition this week?"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_one_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_two_textview"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@id/prompt_two_textview"
                    android:ems="10"
                    android:id="@+id/prompt_two_input" app:layout_constraintStart_toStartOf="@+id/prompt_two_textview"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_two_textview" android:hint="Rate from 1-10"
                    android:textAlignment="center"/>
            <TextView
                    android:text="Pros of the week? (Hit macros, New PR's, etc.)"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_two_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_three_textview" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" android:textStyle="bold" android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/prompt_three_textview"
                    android:id="@+id/prompt_three_input" android:textAlignment="center"
                    android:hint="Type your answer here"
                    app:layout_constraintStart_toStartOf="@+id/prompt_three_textview"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_three_textview"/>
            <TextView
                    android:text="Cons of the week?"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_three_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_four_textview"
                    android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:textStyle="bold"
                    android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="start|top"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/prompt_four_textview"
                    android:id="@+id/prompt_four_input" android:textAlignment="center"
                    android:hint="Type your answer here" app:layout_constraintEnd_toEndOf="@+id/prompt_three_input"
                    app:layout_constraintStart_toStartOf="@+id/prompt_three_input"/>
            <TextView
                    android:text="Is your training still challenging/enjoyable?"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_four_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_five_textview"
                    android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold" android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="start|top"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/prompt_five_textview"
                    android:id="@+id/prompt_five_input" android:hint="Type your answer here"
                    android:textAlignment="center" app:layout_constraintStart_toStartOf="@+id/prompt_four_input"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_four_input"/>
            <TextView
                    android:text="Any injuries/pain?"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_five_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_six_textview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                    android:layout_marginTop="8dp" android:textStyle="bold" android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="start|top"
                    app:layout_constraintTop_toBottomOf="@id/prompt_six_textview"
                    android:ems="10"
                    android:id="@+id/prompt_six_input"
                    app:layout_constraintStart_toStartOf="@+id/prompt_five_input"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_five_input" android:hint="Type your answer here"
                    android:textAlignment="center"/>
            <TextView
                    android:text="Any comments/question?"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/prompt_six_input"
                    android:layout_height="wrap_content" android:id="@+id/prompt_seven_textview"
                    android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:textStyle="bold"
                    android:textAlignment="center"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="start|top"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/prompt_seven_textview"
                    android:id="@+id/prompt_seven_input" android:textAlignment="center"
                    android:hint="Type your answer here"
                    app:layout_constraintStart_toStartOf="@+id/prompt_six_input"
                    app:layout_constraintEnd_toEndOf="@+id/prompt_six_input"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>